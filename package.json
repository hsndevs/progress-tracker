{
  "name": "progress-tracker",
  "version": "1.0.0",
  "description": "A progress tracking app with input form and reporting capabilities",
  "main": "src/index.html",
  "scripts": {
    "build": "npm run clean && npm run copy-assets && npm run build-js",
    "clean": "rm -rf dist",
    "copy-assets": "mkdir -p dist && cp -r src/* dist/",
    "build-js": "webpack --mode production",
    "dev": "webpack-dev-server --mode development --open",
    "start": "npm run dev",
    "deploy": "npm run build && gh-pages -d dist"
  },
  "keywords": ["progress", "tracker", "firebase", "datatable"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0",
    "copy-webpack-plugin": "^11.0.0",
    "html-webpack-plugin": "^5.5.0",
    "gh-pages": "^6.0.0"
  },
  "dependencies": {
    "firebase": "^10.1.0"
  }
}
